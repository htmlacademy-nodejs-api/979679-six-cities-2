{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run ts ./src/main.rest.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "node --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "dependencies": {
    "@typegoose/typegoose": "^13.1.0",
    "chalk": "5.6.2",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.10",
    "dotenv": "16.3.1",
    "got": "13.0.0",
    "inversify": "6.0.1",
    "mongoose": "^9.1.4",
    "pino": "8.15.1",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/convict": "6.1.4",
    "@types/convict-format-with-validator": "6.0.3",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "1.0.0-beta.3",
    "pino-pretty": "10.2.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "2.8.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": ">=18.19",
    "npm": ">=8"
  }
}
